@model Desks.Models.Location
@inject DBContext _context
@using Microsoft.AspNetCore.Http

<div class="row">
    <div class="col-md-4">
        <form asp-action="filter_Desks">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ID" class="control-label">Location</label>
                <select asp-for="ID" size="1">
                    @{
                        foreach (Location l in _context.locations.ToList())
                        {
                            
                                @:<option>
                                    Write(l.location_name);
                                @:</option>
                        }
                    }
                </select>
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Filter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>